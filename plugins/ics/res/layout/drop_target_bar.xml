<merge xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:launcher="http://schemas.android.com/apk/res/com.jzs.dr.mtplauncher.style.ics">
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/DropTargetButtonContainer"
        android:layout_weight="1">
        <!-- Delete target -->
        <com.jzs.dr.mtplauncher.sjar.widget.DeleteDropTarget
            style="@style/DropTargetButton"
            android:tag="delete_target_text"
            android:text="@string/delete_zone_label_workspace"
            android:drawableLeft="@drawable/remove_target_selector"
            launcher:dropTargetBgTransitionDuration="@integer/config_dropTargetBgTransitionDuration"
        		launcher:dropTargetDragPadding="@dimen/drop_target_drag_padding"
            launcher:hoverColor="@color/delete_target_hover_tint"
            launcher:uninstallDrawable="@drawable/uninstall_target_selector"
            launcher:removeDrawable="@drawable/remove_target_selector" />
    </FrameLayout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/DropTargetButtonContainer"
        android:layout_weight="1">
        <!-- Info target -->
        <com.jzs.dr.mtplauncher.sjar.widget.InfoDropTarget
            style="@style/DropTargetButton"
            android:tag="info_target_text"
            android:text="@string/info_target_label"
            android:drawableLeft="@drawable/info_target_selector"
            launcher:dropTargetBgTransitionDuration="@integer/config_dropTargetBgTransitionDuration"
        		launcher:dropTargetDragPadding="@dimen/drop_target_drag_padding"
            launcher:hoverColor="@color/info_target_hover_tint" />
    </FrameLayout>
</merge>