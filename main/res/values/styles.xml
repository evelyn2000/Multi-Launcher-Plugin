    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
 <!--   <style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper.NoTitleBar"> -->
 		<style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@com.jzs:style/AppTheme.Wallpaper.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="Theme.WallpaperPicker" parent="@com.jzs:style/AppTheme.NoActionBar">
    </style>
    
    <!-- Variant of {@link #Theme} with no title bar -->
    <style name="AppTheme.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Variant of {@link #Theme} that has no title bar and no status bar -->
    <style name="AppTheme.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

